<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bt_1P"
        android:layout_width="322dp"
        android:layout_height="72dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/stenc_ex"
        android:gravity="right|center_vertical"
        android:paddingRight="50dp"
        android:text="1 Player"
        android:textColor="@color/dBlue"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.108"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/bt_leaderboard"
        android:layout_width="322dp"
        android:layout_height="72dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/white"
        android:text="Leaderboard"
        android:textSize="40dp"
        android:fontFamily="@font/stenc_ex"
        android:textColor="@color/dBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/bt_2P"
        app:layout_constraintRight_toRightOf="@+id/bt_2P"
        app:layout_constraintTop_toBottomOf="@+id/bt_2P"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/bt_2P"
        android:layout_width="322dp"
        android:layout_height="72dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/white"
        android:text="2 Player"
        android:textSize="40dp"
        android:gravity="right|center_vertical"
        android:paddingRight="50dp"
        android:fontFamily="@font/stenc_ex"
        android:textColor="@color/dBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_1P"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/textView2"
        android:layout_width="371dp"
        android:layout_height="185dp"
        android:contentDescription="wizard logo"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        >



    <ImageButton
        android:id="@+id/bt_settings"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:contentDescription="Settings cog"
        android:scaleType="fitXY"
        android:src="@drawable/cog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/bt_gamerules"
        android:contentDescription="Dark mode sun and moon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:text="Game Rules"
        android:textColor="@color/dBlue"
        android:fontFamily="@font/stenc_ex"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/littledude01"
        android:layout_width="90dp"
        android:layout_height="56dp"
        android:contentDescription="lilguy1"
        android:src="@drawable/playericontransparent"
        app:layout_constraintBottom_toBottomOf="@+id/bt_1P"
        app:layout_constraintEnd_toEndOf="@+id/bt_1P"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt_1P"
        app:layout_constraintTop_toTopOf="@+id/bt_1P"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/littledude02"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:contentDescription="lilguy2"
        android:src="@drawable/playericontransparent"
        app:layout_constraintBottom_toBottomOf="@+id/bt_2P"
        app:layout_constraintEnd_toEndOf="@+id/bt_2P"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt_2P"
        app:layout_constraintTop_toTopOf="@+id/bt_2P"
        app:layout_constraintVertical_bias="0.608"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/littledude03"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:contentDescription="lilguy3"
        android:src="@drawable/playericontransparent"
        app:layout_constraintBottom_toBottomOf="@+id/bt_2P"
        app:layout_constraintEnd_toEndOf="@+id/bt_2P"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt_2P"
        app:layout_constraintTop_toTopOf="@+id/bt_2P"
        app:layout_constraintVertical_bias="0.608"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</androidx.constraintlayout.widget.ConstraintLayout>